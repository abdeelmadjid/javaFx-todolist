<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@style.css" fx:id="mainUi" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MainUiController">
    <top>
        <HBox alignment="CENTER_LEFT">
            <MenuBar>
                <padding>
                    <Insets left="0" />
                </padding>
                <Menu fx:id="menu" text="file" >
                    <items>
                        <MenuItem  onAction="#addNewData" text="new file" />
                        <SeparatorMenuItem />
                    </items>

                </Menu>
            </MenuBar>


            <ToggleButton  fx:id="todayAllToggle" onAction="#todayOrAll" prefWidth="50.0" text="today">


                <tooltip>
                    <Tooltip style="-fx-background-color:#287EFF;" text="show today data only or all data" />
                </tooltip>
            </ToggleButton>

        </HBox>

    </top>
    <left>
        <ListView fx:id="toDoListView" onKeyPressed="#deleteSelected">


        </ListView>
    </left>
    <center>
        <VBox>
            <TextArea fx:id="todoTextArea" onKeyReleased="#updateTextArea" VBox.vgrow="ALWAYS" />
            <HBox style="-fx-background-color:white;">
                <Label fx:id="dateLabel" text="Due:">
                    <font>
                        <Font name="System Bold" size="15" />
                    </font>
                </Label>
            </HBox>

        </VBox>

    </center>
</BorderPane>
